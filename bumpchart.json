{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 975,
  "height": 300,
  "background": null,
  "config": {
    "font": "Cabin",
    "title": {
      "font": "Cabin",
      "fontSize": 17
    },
    "axis": {
      "labelFont": "Cabin",
      "labelFontSize": 13,
      "titleFont": "Cabin",
      "titleFontSize": 15
    },
    "legend": {
      "labelFont": "Cabin",
      "labelFontSize": 13,
      "titleFont": "Cabin",
      "titleFontSize": 15
    },
    "header": {
      "labelFont": "Cabin",
      "titleFont": "Cabin"
    },
    "text": {
      "font": "Cabin",
      "fontSize": 12
    }
  },
  "title": {
    "text": "Ranking of Renewable Energy Sources in Australia Over Time (1999-2023)",
    "offset": 10
  },
  "data": {
    "url": "https://raw.githubusercontent.com/RyhanJ/Assignment2/refs/heads/main/bumpchart.csv"
  },
  "mark": {
    "type": "line",
    "point": true
  },
  "params": [
    {
      "name": "fuel_types_selection",
      "value": "All",
      "bind": {
        "input": "select",
        "options": ["All", "Solar", "Wind", "Hydro", "Bioenergy"],
        "name": "Fuel Type: ",
        "labels": {
          "fontSize": 15,
          "font": "Cabin"
        }
      }
    },
    {
      "name": "year_slider",
      "value": 1999,
      "bind": {
        "input": "range",
        "min": 1999,
        "max": 2022,
        "step": 1,
        "name": "Start Year: ",
        "labels": {
          "fontSize": 15,
          "font": "Cabin"
        }
      }
    }
  ],
  "transform": [
    {
      "filter": "fuel_types_selection == 'All' || datum.Fuel_Type == fuel_types_selection"
    },
    {
      "filter": "year(datum.Year) >= year_slider"
    }
  ],
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "timeUnit": "year",
      "title": "Year"
    },
    "y": {
      "field": "Rank",
      "type": "quantitative",
      "scale": {
        "domain": [1, 4],
        "reverse": true
      },
      "axis": {
        "title": "Rank",
        "tickCount": 4,
        "values": [1, 2, 3, 4]
      }
    },
    "color": {
      "field": "Fuel_Type",
      "type": "nominal",
      "title": "Fuel Type",
      "scale": {
        "domain": ["Bioenergy", "Hydro", "Solar", "Wind"],
        "range": ["#4E79A7", "#A0CBE8", "#F28E2B", "#ffbe7d"]
      }
    },
    "opacity": {
      "condition": {
        "test": "fuel_types_selection == 'All' || datum.Fuel_Type == fuel_types_selection",
        "value": 1
      },
      "value": 0.3
    },
    "tooltip": [
      {
        "field": "Fuel_Type",
        "type": "nominal",
        "title": "Fuel Type"
      },
      {
        "field": "Year",
        "type": "temporal",
        "format": "%Y"
      },
      {
        "field": "Rank",
        "type": "quantitative",
        "title": "Rank"
      }
    ]
  }
}